{
  "compilerOptions": {
    "target": "ES6",                
    "module": "ESNext",               
    "moduleResolution": "node",    
    "outDir": "./dist",            
    "esModuleInterop": true,       
    "resolveJsonModule": true,     
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  },
  "include": ["src"],              
  "exclude": ["node_modules"]
}